<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/screenFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            tools:ignore="NestedWeights">

            <TextView
                android:id="@+id/titleFloat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="15dp"
                android:singleLine="true"
                android:text="@string/fc"
                android:textAppearance="?android:textAppearance"
                tools:ignore="SelectableText" />

            <ImageView
                android:id="@+id/closeFloat"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="15dp"
                android:padding="2dp"
                app:srcCompat="@drawable/ic_close"
                tools:ignore="ContentDescription" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/titleCircle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="15dp"
                android:singleLine="true"
                android:text="@string/ss"
                android:textAppearance="?android:textAppearance"
                tools:ignore="SelectableText" />

            <ImageView
                android:id="@+id/closeCircle"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="15dp"
                android:padding="2dp"
                app:srcCompat="@drawable/ic_close"
                tools:ignore="ContentDescription" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            tools:ignore="NestedWeights">

            <TextView
                android:id="@+id/titleNav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="15dp"
                android:singleLine="true"
                android:text="@string/nh"
                android:textAppearance="?android:textAppearance"
                tools:ignore="SelectableText" />

            <ImageView
                android:id="@+id/closeNav"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="15dp"
                android:padding="2dp"
                app:srcCompat="@drawable/ic_close"
                tools:ignore="ContentDescription" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/titleNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="15dp"
                android:singleLine="true"
                android:text="@string/zd"
                android:textAppearance="?android:textAppearance"
                tools:ignore="SelectableText" />

            <ImageView
                android:id="@+id/closeNote"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="15dp"
                android:padding="2dp"
                app:srcCompat="@drawable/ic_close"
                tools:ignore="ContentDescription" />

        </FrameLayout>

    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/closeAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:singleLine="true"
            android:text="@string/cw"
            android:textAllCaps="true"
            android:textAppearance="?android:textAppearance"
            tools:ignore="SelectableText" />

    </FrameLayout>

</LinearLayout>